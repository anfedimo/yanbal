<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core">

	<p:outputLabel value="Fecha Compromiso:"></p:outputLabel>
	<br />
	<p:calendar id="fechaCompromiso" value="#{tipificarBean.fechaPromesa}"
		style="width:400px" />
	<br />
	<br />
	<p:outputLabel value="Valor/Monto Compromiso:"></p:outputLabel>
	<br />
	<p:inputNumber value="#{tipificarBean.montoPromesa}" decimalPlaces="0"
		style="width:400px" />
	<br />
	<br />
	<p:outputLabel value="Número de cuotas:"></p:outputLabel>
	<br />
	<br />
	<p:selectOneMenu value="#{tipificarBean.selectedCuota}"
		style="width:400px">
		<p:ajax listener="#{tipificarBean.onChangeValorCuota}"
			update="idValorCuota" />
		<f:selectItem itemLabel="Selecione....." itemValue=""
			noSelectionOption="true" />
		<f:selectItems value="#{tipificarBean.cuotas}"/>
		
	</p:selectOneMenu>
	<br />
	<br />
	<p:outputLabel value="Valor/Monto Cuota:"></p:outputLabel>
	<br />
	<p:inputNumber id="idValorCuota" value="#{tipificarBean.montoCuota}"
		decimalPlaces="0" style="width:400px">
		<p:ajax listener="#{tipificarBean.validarCuota}"
			update="msgValorCuota" />
	</p:inputNumber>

	
		<h:outputText id="msgValorCuota" value="#{tipificarBean.mensajeCuota}"
			style="color:#ffffff; background-color: #EF5350; padding: 2px 5px;" />

</ui:composition>