package co.sistemcobro.yanbal.ejb.impl;

import java.util.List;

import javax.ejb.Stateless;

import co.sistemcobro.yanbal.bean.gestionCantidad;
import co.sistemcobro.yanbal.dao.DashBoardDAO;
import co.sistemcobro.yanbal.ejb.IDashBoardEJBLocal;


@Stateless
public class DashBoardEJB extends BaseEJB implements IDashBoardEJBLocal {

	@Override
	public List<gestionCantidad> gestionDiaACtual(String filtro) {
		List<gestionCantidad> gestionCantidad = null;
		DashBoardDAO ClienteDao = new DashBoardDAO(dc_yanbal);
		try {
			gestionCantidad = ClienteDao.buscarGestionesDia(filtro);
		} catch (Exception e) {

			e.printStackTrace();
		}
		return gestionCantidad;
	}

